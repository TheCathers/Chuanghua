*{margin:0;padding: 0}
body{
    background:url(img/beijing.jpg);
    background-color: white;
    min-height: 100vh;
    justify-content: center;
    align-items: center;
    text-align: center;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}
input::-webkit-input-placeholder{
    color:white;
}
.top{
    background-color: lavender;
    height: 50px;
    text-align: left;
    background-color: rgba(255,255,255,0.7);
    background-size: 100px;
}
.usebar{
    margin-left: 75%;

}
/*用户登录框*/
.usericon{
    margin-left: 100px;
    width: 50px;
}
/*菜单*/
.menu{
    background-color: rgba(0,102,255);
    height: 40px;
}
/*导航栏*/
.nav{
    position: fixed;
    height: 100%;
    width: 200px;
    background-color: white;
}
.nav-link-ul{
    height: 36px;
    align-items: center;
    margin-top: -40px;
    margin-left: 180px;
}
.nav-link-item{
    float: left;
    margin-left: 80px;
    font-family: 微软雅黑;
    color: lightblue;
    font-size: 18px;
}
.logo{
    margin-left: 50px;
    margin-top: -53px;
}
a{
    text-decoration: none;
    color: white;
}
li{
    list-style-type: none;
}
/*主体框架*/
.box{
    background-color: rgba(255,255,255,0.2);
    width: 450px;
    height: 500px;
    margin-top: 3%;
    border-radius: 8px;
    position: absolute;
    right: 80px;
}
input[id=username] {
    box-sizing: border-box;
    font-size: 12px;
    background-image: url("icon/用户.png");
    background-repeat: no-repeat;
    background-position: left;
    background-size: 25px 25px;
    padding: 12px 20px 12px 40px;
    color: white;
}
input[type=password] {
    box-sizing: border-box;
    font-size: 12px;
    background-image: url("icon/密 码.png");
    background-repeat: no-repeat;
    background-position: left;
    background-size: 25px 25px;
    padding: 12px 20px 12px 40px;
    color: white;
}
input:focus{
    outline: none;
    border-color: white;
    border-top-width: 0px;
    border-right-width: 0px;
    border-bottom-width: 1px;
    border-left-width: 0px;
    border-style: solid;
}
input[id=email]{
    width: 50%;
    box-sizing: border-box;
    font-size: 12px;
    background-image: url("icon/邮箱.png");
    background-repeat: no-repeat;
    background-position: left;
    background-size: 25px 25px;
    padding: 12px 20px 12px 40px;
    color: white;
}
.username_field{
    margin-top: 50px;
    width: 350px;
    height: 50px;
    border-color: white;
    border-top-width: 0px;
    border-right-width: 0px;
    border-bottom-width: 1px;
    border-left-width: 0px;
    border-style: solid;
    background-color: transparent;
}
.password_fied{
    margin-top: 25px;
    width: 350px;
    height: 50px;
    border-color: white;
    border-top-width: 0px;
    border-right-width: 0px;
    border-bottom-width: 1px;
    border-left-width: 0px;
    border-style: solid;
    background-color: transparent;
}
#register{
    margin-top: 50px;
    background-color: transparent;
    width: 250px;
    height: 50px;
    border-radius: 15px;
    color: white;
    border-color: white;
    cursor: pointer;
}
#email{
    margin-top: 25px;
    width: 350px;
    height: 50px;
    border-color: white;
    border-top-width: 0px;
    border-right-width: 0px;
    border-bottom-width: 1px;
    border-left-width: 0px;
    border-style: solid;
    background-color: transparent;
}
.tips{
    color: white;
    margin-top: 15px;
}
.content{
    color: blue;
}


