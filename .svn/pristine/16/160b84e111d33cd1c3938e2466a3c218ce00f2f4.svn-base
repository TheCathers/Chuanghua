*{margin:0;padding: 0}
body{
    background: linear-gradient(to bottom, #40405c 0%, #6f71aa 80%, #8a76ab 100%);
    background-color: white;
    min-height: 100vh;
    justify-content: center;
    align-items: center;
    text-align: center;
}
a{
    text-decoration: none;
    color: white;
}
li{
    list-style-type: none;
}
.top{
    height: 50px;
    text-align: left;
    background-color: #4c6e2c;
    background-size: 100px
}
/*登录注册框*/
.usebar{
    margin-left: 75%;

}
/*用户登录框*/
.usericon{
    margin-left: 100px;
    width: 50px;
}
/*菜单*/
.menu{
    background-color: rgba(0,102,255);
    height: 40px;
}
/*导航*/
.nav{
    position: fixed;
    height: 100%;
    width: 200px;
    background-color: white;
}
.nav-link-ul{
    height: 36px;
    align-items: center;
    margin-top: -40px;
    margin-left: 180px;
}
.nav-link-item{
    float: left;
    margin-left: 80px;
    font-family: 微软雅黑;
    color: lightblue;
    font-size: 18px;
}
.logo{
    margin-left: 50px;
    margin-top: -53px;
}
.box{
    background-color: white;
    width: 700px;
    height: 550px;
    position: absolute;
    right: 580px;
    margin-top: 3%;
}
#tab{
    margin-left: 10px;
}
.table-control{
    margin-left: 30px;
    transform: translateY(60px);
}
#txt-control{
    width: 500px;
    height: 200px;
    resize: vertical;
    margin-top: 30px;
}
#tag{
    width: 250px;
    height: 25px;
    transform: translateX(-49%);
}
.btn{
    margin-top: 100px;
    width: 75px;
    height: 40px;
}
.anony{
    margin-top: -30px;
    margin-left: 200px;
}